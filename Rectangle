// Lớp SalariedEmployee kế thừa từ Employee
public class SalariedEmployee extends Employee {
    private double weeklySalary;

    public SalariedEmployee(String firstName, String lastName, String socialSecurityNumber) {
        super(firstName, lastName, socialSecurityNumber);
        this.weeklySalary = 0; // Giá trị mặc định
    }

    public SalariedEmployee(String firstName, String lastName, String socialSecurityNumber, double weeklySalary) {
        super(firstName, lastName, socialSecurityNumber);
        this.weeklySalary = weeklySalary;
    }

    // Phương thức set/get cho weeklySalary
    public double getWeeklySalary() {
        return weeklySalary;
    }

    public void setWeeklySalary(double weeklySalary) {
        this.weeklySalary = weeklySalary;
    }

    // Override phương thức calculateEarnings cho SalariedEmployee
    @Override
    public double calculateEarnings() {
        return weeklySalary;
    }

    // Override phương thức in thông tin
    @Override
    public void print() {
        super.print();
        System.out.println("Salaried Employee");
    }
}
