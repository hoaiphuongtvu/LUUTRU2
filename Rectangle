import java.util.Scanner;

public class Employee {
    private String name;
    private String position;
    private double salary;

    // Getter và Setter cho tên
    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    // Getter và Setter cho chức vụ
    public String getPosition() {
        return position;
    }

    public void setPosition(String position) {
        this.position = position;
    }

    // Getter và Setter cho mức lương
    public double getSalary() {
        return salary;
    }

    public void setSalary(double salary) {
        this.salary = salary;
    }

    // Phương thức tính toán mức lương
    public void calculateSalary() {
        // Code tính toán mức lương theo logic của bạn
        // Ví dụ đơn giản ở đây:
        System.out.println("Mức lương của " + name + " là: " + salary);
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Nhập thông tin từ người dùng
        System.out.println("Nhập tên nhân viên: ");
        String name = scanner.nextLine();

        System.out.println("Nhập chức vụ: ");
        String position = scanner.nextLine();

        System.out.println("Nhập mức lương: ");
        double salary = scanner.nextDouble();

        // Tạo đối tượng Employee và thiết lập thông tin vừa nhập
        Employee employee = new Employee();
        employee.setName(name);
        employee.setPosition(position);
        employee.setSalary(salary);

        // Hiển thị thông tin và tính toán mức lương
        System.out.println("Thông tin nhân viên:");
        System.out.println("Tên: " + employee.getName());
        System.out.println("Chức vụ: " + employee.getPosition());
        employee.calculateSalary();

        scanner.close();
    }
}
