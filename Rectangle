public class Main {
    public static void main(String[] args) {
        // Tạo các đối tượng nhân viên
        SalariedEmployee salariedEmployee = new SalariedEmployee("John", "Doe", "123-456-7890", 1000);
        HourlyEmployee hourlyEmployee = new HourlyEmployee("Jane", "Smith", "987-654-3210", 15, 45);
        CommissionEmployee commissionEmployee = new CommissionEmployee("Mike", "Johnson", "555-555-5555", 2000, 0.15);
        BasePlusCommissionEmployee basePlusCommissionEmployee = new BasePlusCommissionEmployee("Alice", "Williams", "444-444-4444", 3000, 0.1, 500);

        // Tính lương cho từng loại nhân viên
        System.out.println("Lương của Salaried Employee: " + salariedEmployee.earnings());
        System.out.println("Lương của Hourly Employee: " + hourlyEmployee.earnings());
        System.out.println("Lương của Commission Employee: " + commissionEmployee.earnings());
        System.out.println("Lương của Base Plus Commission Employee: " + basePlusCommissionEmployee.earnings());
    }
}
