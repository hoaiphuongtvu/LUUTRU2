import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class QLCB {
    private List<CanBo> danhSachCanBo;

    public QLCB() {
        danhSachCanBo = new ArrayList<>();
    }

    public void themMoiCanBo(CanBo canBo) {
        danhSachCanBo.add(canBo);
    }

    public void timKiemTheoHoTen(String hoTen) {
        for (CanBo canBo : danhSachCanBo) {
            if (canBo.hoTen.equals(hoTen)) {
                System.out.println("Thông tin cán bộ:");
                System.out.println("Họ tên: " + canBo.hoTen);
                System.out.println("Tuổi: " + canBo.tuoi);
                System.out.println("Giới tính: " + canBo.gioiTinh);
                System.out.println("Địa chỉ: " + canBo.diaChi);
            }
        }
    }

    public void hienThiDanhSachCanBo() {
        System.out.println("Danh sách cán bộ:");
        for (CanBo canBo : danhSachCanBo) {
            System.out.println("Họ tên: " + canBo.hoTen);
            System.out.println("Tuổi: " + canBo.tuoi);
            System.out.println("Giới tính: " + canBo.gioiTinh);
            System.out.println("Địa chỉ: " + canBo.diaChi);
        }
    }

    public static void main(String[] args) {
        QLCB qlcb = new QLCB();
        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.println("Chọn chức năng:");
            System.out.println("1. Thêm mới cán bộ");
            System.out.println("2. Tìm kiếm theo họ tên");
            System.out.println("3. Hiển thị danh sách cán bộ");
            System.out.println("4. Thoát");

            int choice = scanner.nextInt();
            scanner.nextLine();

            switch (choice) {
                case 1:
                    System.out.println("Chọn loại cán bộ:");
                    System.out.println("1. Công nhân");
                    System.out.println("2. Kỹ sư");
                    System.out.println("3. Nhân viên");

                    int loaiCanBo = scanner.nextInt();
                    scanner.nextLine();

                    System.out.println("Nhập họ tên:");
                    String hoTen = scanner.nextLine();

                    System.out.println("Nhập tuổi:");
                    int tuoi = scanner.nextInt();
                    scanner.nextLine();

                    System.out.println("Nhập giới tính:");
                    String gioiTinh = scanner.nextLine();

                    System.out.println("Nhập địa chỉ:");
                    String diaChi = scanner.nextLine();

                    if (loaiCanBo == 1) {
                        System.out.println("Nhập bậc:");
                        int bac = scanner.nextInt();
                        scanner.nextLine();

                        CongNhan congNhan = new CongNhan(hoTen, tuoi, gioiTinh, diaChi, bac);
                        qlcb.themMoiCanBo(congNhan);
                    } else if (loaiCanBo == 2) {
                        System.out.println("Nhập ngành đào tạo:");
              
