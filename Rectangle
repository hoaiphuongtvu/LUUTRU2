import java.util.Date;

public class Employee {
    private String lastName;
    private Date birthDate;
    private Date hireDate;

    public Employee(String lastName, Date birthDate, Date hireDate) {
        this.lastName = lastName;
        this.birthDate = birthDate;
        this.hireDate = hireDate;
    }

    public void displayEmployee() {
        System.out.println("Họ: " + lastName);
        System.out.println("Ngày sinh: " + birthDate);
        System.out.println("Ngày vào làm: " + hireDate);
    }

    public static void main(String[] args) {
        // Đoạn mã này để minh họa cách sử dụng lớp Employee
        // Tạo một đối tượng Employee
        Date birthDate = new Date(1990, 10, 20); // Lưu ý: Date(int year, int month, int day) đã bị deprecated, nên sử dụng cách khác trong thực tế
        Date hireDate = new Date(2020, 5, 10); // Tương tự như trên, nên sử dụng các cách tạo Date hiện đại hơn
        Employee employee = new Employee("Smith", birthDate, hireDate);

        // Hiển thị thông tin nhân viên
        employee.displayEmployee();
    }
}
